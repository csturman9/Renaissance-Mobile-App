<?xml version="1.0" encoding="utf-8" ?> 
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="Rennaisance-WebService" namespace="Rennaisance_WebService.Models">
  <class name="Announcement" table="Announcement" dynamic-update="true" >
    <cache usage="read-write"/>
    <id name="Id" column="Id" type="int">
      <generator class="native" />
    </id>
    <property name="Title" Column ="TITLE" type="string"/>
    <property name="Type"  Column ="ANN_TYPE" type="string" />
    <property name="Time"  Column ="ANN_TIME"/>
    <one-to-one name="UserId"
            column="USER_ID"
            class="User"/>
    <property name="DateCreated" Column="UPDATED_DATE"/>   
    
    <subclass name="GeneralAnnouncement" discriminator-value="D">
      <property name="Topic" />
      <property name="Message" />
      <property name="AdditonalInformation" />
    </subclass> 
  </class>
</hibernate-mapping>