<?xml version="1.0" encoding="utf-8" ?> 
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" 
                   auto-import="true" 
                   assembly="Rennaisance-WebService" 
                   namespace="Rennaisance_WebService.Models">
  <class name="Announcement">
    <cache usage="read-write"/>
    <id name="Id" column="Id" type="int">
      <generator class="native" />
    </id>
    <property name="Title"/>
    <property name="Type"/>
    <property name="Time"/>
    <one-to-one name="UserId" class="User"/>
    <property name="DateCreated"/>      
    <subclass name="GeneralAnnouncement" extends="Announcement">
      <key column="Id" />
      <property name="Topic" />
      <property name="Message" />
      <property name="AdditonalInformation" />
    </subclass> 
  </class>
</hibernate-mapping>